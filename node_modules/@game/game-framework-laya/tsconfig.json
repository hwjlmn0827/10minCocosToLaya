{
  "compilerOptions": {
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "noEmitHelpers": true,
    "importHelpers": true,
    "target": "es6",
    "outDir": "module",
    "lib": [
      "esnext",
      "dom"
    ],
    "declaration": true,
    "declarationDir": "types/",
    "typeRoots": [
      "./types"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "./lib/**/*.ts",
    "../game-builder-laya/lib/types/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}